{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"types": [
			"@webgpu/types",
			"@types/bun",
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		// "paths": {
		// 	"index": [
		// 		"./index.js",
		// 		"./index.jsx",
		// 		"./index.ts",
		// 		"./index.tsx",
		// 	]
		// }
	}
}